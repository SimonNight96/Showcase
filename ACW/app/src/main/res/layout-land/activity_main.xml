<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobile.labs.acw.MainActivity">


    <Spinner
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="@string/playnewpuzzle"
        android:id="@+id/ChoosePuzzleBtn"
        android:layout_alignTop="@+id/DownloadBtn"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/DownloadedSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/spinner"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelectedPuzzletxt"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/ChoosePuzzleBtn"
        android:layout_alignRight="@+id/ChoosePuzzleBtn"
        android:layout_alignEnd="@+id/ChoosePuzzleBtn"
        />

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="@string/playDownloaded"
        android:id="@+id/DownloadBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/downloadpuzzleString"
        android:id="@+id/textView"
        android:textStyle="bold"
       android:layout_alignLeft="@id/DownloadedSpinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select new puzzle:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_alignRight="@+id/ChoosePuzzleBtn"
        android:layout_alignEnd="@+id/ChoosePuzzleBtn" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/FilterLabelBtn"
        android:id="@+id/FilterBtn"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/FilteredPuzzleListView"
        android:layout_alignEnd="@+id/FilteredPuzzleListView"
        android:layout_alignTop="@id/DownloadBtn"/>

    <ListView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/FilteredPuzzleListView"
        android:layout_below="@+id/spinner"
        android:layout_above="@+id/FilterBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumOfColumnsSpinner"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/FilterBtn"
        android:layout_alignStart="@+id/FilterBtn"
        android:layout_alignRight="@+id/FilterBtn"
        android:layout_alignEnd="@+id/FilterBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FilterLabel"
        android:id="@+id/textView4"
        android:layout_above="@+id/NumOfColumnsSpinner"
        android:layout_alignLeft="@+id/NumOfColumnsSpinner"
        android:layout_alignStart="@+id/NumOfColumnsSpinner" />

</RelativeLayout>
